# ============================================================================
# JANSTRO IMS - ENVIRONMENT TEMPLATE (.env.example)
# ============================================================================
# ⚠️ DO NOT USE THIS FILE DIRECTLY
# Copy to .env and replace ALL placeholder values
# ============================================================================

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME=YOUR_APP_NAME_HERE
APP_ENV=production
APP_DEBUG=false
APP_TIMEZONE=YOUR_TIMEZONE_HERE
APP_URL=https://YOUR_DOMAIN_HERE
FRONTEND_URL=https://YOUR_DOMAIN_HERE/YOUR_FRONTEND_PATH

# ============================================================================
# DATABASE CONFIGURATION (CRITICAL)
# ============================================================================
DB_CONNECTION=mysql
DB_HOST=YOUR_DB_HOST
DB_PORT=3306
DB_DATABASE=YOUR_DB_NAME
DB_USERNAME=YOUR_DB_USERNAME
DB_PASSWORD=YOUR_DB_PASSWORD
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# ============================================================================
# SECURITY SETTINGS (CRITICAL)
# ============================================================================
JWT_SECRET=YOUR_JWT_SECRET_64_CHAR_HEX
JWT_EXPIRATION=86400
JWT_ALGORITHM=HS256
JWT_REFRESH_EXPIRATION=604800

SESSION_LIFETIME=86400
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

ENCRYPTION_KEY=base64:YOUR_BASE64_ENCRYPTION_KEY

# ============================================================================
# RATE LIMITING & AUTH SECURITY
# ============================================================================
RATE_LIMIT_ENABLED=true
LOGIN_MAX_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=900
API_RATE_LIMIT=100

PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=false

# ============================================================================
# EMAIL CONFIGURATION (OPTIONAL)
# ============================================================================
MAIL_MAILER=smtp
MAIL_HOST=YOUR_SMTP_HOST
MAIL_PORT=587
MAIL_USERNAME=YOUR_SMTP_USERNAME
MAIL_PASSWORD=YOUR_SMTP_PASSWORD
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=YOUR_FROM_EMAIL
MAIL_FROM_NAME=YOUR_FROM_NAME

# ============================================================================
# FILE UPLOAD SETTINGS
# ============================================================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf,xlsx,csv
UPLOAD_PATH=/ABSOLUTE/PATH/TO/UPLOADS

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================
BACKUP_ENABLED=true
BACKUP_PATH=/ABSOLUTE/PATH/TO/BACKUPS
BACKUP_RETENTION_DAYS=30

# ============================================================================
# LOGGING SETTINGS
# ============================================================================
LOG_LEVEL=warning
LOG_PATH=/ABSOLUTE/PATH/TO/LOGS
LOG_MAX_SIZE=10485760
LOG_RETENTION_DAYS=90

ERROR_REPORTING=false
ERROR_LOG_FILE=error.log

# ============================================================================
# NOTIFICATION SETTINGS
# ============================================================================
NOTIFICATIONS_ENABLED=true

LOW_STOCK_ALERT_ENABLED=true
LOW_STOCK_RECIPIENTS=LOW_STOCK_EMAILS_COMMA_SEPARATED

ORDER_NOTIFICATION_ENABLED=true
ORDER_NOTIFICATION_RECIPIENTS=ORDER_EMAILS_COMMA_SEPARATED

DAILY_SUMMARY_ENABLED=false
DAILY_SUMMARY_RECIPIENTS=SUMMARY_EMAILS_COMMA_SEPARATED

# ============================================================================
# COMPANY INFORMATION
# ============================================================================
COMPANY_NAME=YOUR_COMPANY_NAME
COMPANY_ADDRESS=YOUR_COMPANY_ADDRESS
COMPANY_PHONE=YOUR_COMPANY_PHONE
COMPANY_EMAIL=YOUR_COMPANY_EMAIL
COMPANY_WEBSITE=YOUR_COMPANY_WEBSITE

# ============================================================================
# SYSTEM DEFAULTS
# ============================================================================
DEFAULT_TIMEZONE=YOUR_TIMEZONE_HERE
DEFAULT_CURRENCY=YOUR_CURRENCY_CODE
DEFAULT_LANGUAGE=en
DEFAULT_DATE_FORMAT=Y-m-d
DEFAULT_TIME_FORMAT=H:i:s

DEFAULT_REORDER_LEVEL=10
DEFAULT_LEAD_TIME_DAYS=7
LOW_STOCK_THRESHOLD=20
